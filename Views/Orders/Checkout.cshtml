@using Coffeeshop.Models
@model Order  // Đảm bảo model Order được truyền vào từ action GET Checkout nếu bạn muốn điền sẵn giá trị

@{
    ViewData["Title"] = "Checkout"; // Thêm dòng này nếu bạn muốn có tiêu đề cho trang
}

<form asp-controller="Orders" asp-action="Checkout" method="post" role="form">
    <section data-bs-version="5.1" class="form6 cid-tsFfsp7eqK" id="form6-n">
        <div class="container">
            <div class="mt-5">
                <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-4">
                    <h3 class="fs-5 fw-bolder m-0 lh-1">Shipping Address</h3>
                </div>

                @* Hiển thị tóm tắt lỗi validation (nếu có) *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @* Sử dụng asp-for và label Tag Helper *@
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" placeholder="123 Some Street Somewhere" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-auto mbr-section-btn align-center mt-3">
                    @* Thêm margin-top cho dễ nhìn *@
                    <button type="submit" class="btn btn-primary display-4">Place Order</button>
                </div>

            </div>
        </div>
    </section>
</form>

@* Thêm section Scripts để validation hoạt động phía client (nếu bạn chưa có) *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}